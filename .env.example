# FPanel Environment Configuration

# Database
DATABASE_URL="file:./db/custom.db"

# JWT Secret - CHANGE THIS IN PRODUCTION!
# Generate a strong random secret key for JWT tokens
JWT_SECRET="your-very-secret-jwt-key-change-this-in-production-min-32-chars"

# Server Configuration
PORT=3000
NODE_ENV=production

# License Configuration
# Default expiration period for licenses in months
LICENSE_EXPIRY_MONTHS=12

# Grace period for expired licenses in days
LICENSE_GRACE_PERIOD_DAYS=7

# NextAuth Configuration (optional, for future OAuth integration)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key"

# Email Configuration (for future email notifications)
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_USER="your-email@example.com"
SMTP_PASSWORD="your-email-password"
SMTP_FROM="FPanel <noreply@fpanel.io>"

# Rate Limiting
# Maximum requests per window
RATE_LIMIT_MAX=100

# Rate limit window in milliseconds
RATE_LIMIT_WINDOW_MS=60000

# Upload Limits
# Maximum file upload size in MB
MAX_UPLOAD_SIZE=100

# Allowed file extensions
ALLOWED_FILE_EXTENSIONS=".jpg,.jpeg,.png,.gif,.pdf,.zip,.tar.gz"

# Backup Configuration
# Backup retention period in days
BACKUP_RETENTION_DAYS=30

# Backup directory
BACKUP_DIR="/opt/fpanel/backups"

# Monitoring Configuration
# Server monitoring interval in seconds
MONITORING_INTERVAL=30

# Alert thresholds (percentage)
CPU_ALERT_THRESHOLD=80
RAM_ALERT_THRESHOLD=80
DISK_ALERT_THRESHOLD=85

# Security
# Enable/disable 2FA
TWO_FACTOR_ENABLED=false

# Session timeout in seconds
SESSION_TIMEOUT=604800

# API Rate Limiting
# Number of requests allowed per window
API_RATE_LIMIT=60

# API rate limit window in minutes
API_RATE_WINDOW=1

# Development
# Enable/disable debug mode (always false in production)
DEBUG=false

# Enable/disable detailed error messages (always false in production)
DETAILED_ERRORS=false
